%h1 Please enter the code word to continue…

-if @wrong == true
  .hmm
    %h3 Hmm… that doesn’t seem right. Try again?

=form_for :lockup, :url => { :action => 'unlock' }, :html => {} do |form|
  -if @wrong == true
    %p= form.password_field "codeword", :value => @codeword, :class => 'nope'
  -else
    %p= form.password_field "codeword", :placeholder => "code word"
    
  -if params[:return_to].present?
    = form.hidden_field "return_to", :value => params[:return_to]
  -elsif @return_to.present?
    = form.hidden_field "return_to", :value => @return_to
    
  %p= button_tag "Go"
